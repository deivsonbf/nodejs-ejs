<%- include ('layout/header') %>

<body>
  <%- include ('layout/navbar') %>
  <div class="container">
    <hr />
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr />

    <form action="/salvarResposta" method="POST">
      <h3>Responda</h3>
      <label for="corpo">Responda aqui</label>
      <textarea class="form-control" name="corpo" placeholder="resposta aqui" cols="30" rows="5"></textarea>
      <br />
      <input type="hidden" name="perguntaId" value="<%= pergunta.id%>" />
      <button type="submit" class="btn btn-primary">Enviar</button>
      <div class="clear"></div>
    </form>
    <h3>Respostas</h3>
    <hr />
    <% respostas.forEach(element => { %>
    <div class="box">
      <p><%= element.corpo %></p>
    </div>
    <% }) %>
    <hr />
  </div>
</body>

